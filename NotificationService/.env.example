# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Auth
AUTH_TOKEN=replace-with-strong-shared-token

# Email provider (choose either SMTP or SendGrid)
EMAIL_PROVIDER=smtp # smtp|sendgrid
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
SMTP_FROM="Cycle Store <no-reply@cyclestore.com>"

SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM="Cycle Store <no-reply@cyclestore.com>"

# SMS provider (Twilio-like)
SMS_PROVIDER=twilio # twilio|mock
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=info

# Scheduling
SCHEDULER_ENABLED=true

# CORS
CORS_ORIGINS=*

# Docs base URL (used for generating server url dynamically in Swagger UI)
SITE_URL=
